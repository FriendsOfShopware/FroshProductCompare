<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Snippet file for Storefront -->
        <service id="Justa\SimpleProductCompare\Resources\snippet\en_GB\SnippetFile_en_GB" public="true">
            <tag name="shopware.snippet.file" priority="200"/>
        </service>
        <service id="Justa\SimpleProductCompare\Resources\snippet\de_DE\SnippetFile_de_DE" public="true">
            <tag name="shopware.snippet.file" priority="201"/>
        </service>

        <!-- Entity Extension-->
        <service id="Justa\SimpleProductCompare\DBAL\Extension\ProductCrossSellingEntityExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <!-- Entity Definitions-->
        <service id="Justa\SimpleProductCompare\CrossSellingComparable\CrossSellingComparableDefinition">
            <tag name="shopware.entity.definition" entity="spc_cross_selling_comparable"/>
        </service>

        <service id="Justa\SimpleProductCompare\Page\CompareProductPageLoader">
            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\Listing\ProductListingLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\GenericPageLoader"/>
            <argument type="service" id="Symfony\Component\EventDispatcher\EventDispatcherInterface" />
            <argument type="service" id="product_review.repository" />
        </service>


        <service id="Justa\SimpleProductCompare\Controller\CompareProductController" public="true">
            <argument type="service" id="Justa\SimpleProductCompare\Page\CompareProductPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\GenericPageLoader"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- subscriber -->
        <service id="Justa\SimpleProductCompare\Subscriber\CrossSellingProductListingSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Justa\SimpleProductCompare\Page\CompareProductPageLoader"/>
            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\Listing\ProductListingLoader"/>
        </service>
    </services>
</container>
